{
  "scripts": {
    "t:dev": "tailwindcss -i ./assets/tailwind-input.css -o ./assets/tailwind-output.css --watch",
    "t:build": "tailwindcss -i ./assets/tailwind-input.css -o ./assets/tailwind-output.css --minify",
    "shopify:dev": "shopify theme dev -s ferher-my.myshopify.com",
    "dev": "concurrently -k -n TW,SHOP -c green,cyan \"npm run t:dev\" \"npm run shopify:dev\""
  },
  "dependencies": {
    "@tailwindcss/cli": "^4.1.17",
    "tailwindcss": "^4.1.17"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}
