<section
  id="cart"
  class="tw:py-10"
  data-section-id="{{ section.id }}"
  data-section-type="cart"
>
  {% if cart.item_count > 0 %}
    <div class="tw:max-w-5xl tw:mx-auto tw:px-4 tw:py-10">
      <div class="tw:bg-white tw:shadow-md tw:rounded-xl tw:p-6 lg:tw:p-10 tw:space-y-8">
        <form action="{{ routes.cart_url }}" method="post" novalidate class="cart__form" id="cart-form">
          <div class="tw:mb-6">
            <h1 class="tw:text-3xl tw:font-bold">
              {{ 'cart.title' | t }}
            </h1>
          </div>

          <div class="tw:flex tw:gap-10">
            <div class="tw:flex-1">
              <div class="tw:space-y-6">
                {% for item in cart.items %}
                  <article
                    class="cart-item tw:bg-gray-50 tw:rounded-lg tw:p-4 tw:border tw:flex tw:gap-6"
                    data-cart-item
                    data-line="{{ forloop.index }}"
                  >
                    <a href="{{ item.url }}" class="tw:w-24 tw:h-24 tw:shrink-0">
                      {{
                        item.image
                        | image_url: width: 300
                        | image_tag: widths: '150, 300', sizes: '150px', alt: item.image.alt
                        | default: item.product.title
                      }}
                    </a>

                    <div class="tw:flex-1 tw:space-y-2">
                      <a href="{{ item.url }}" class="tw:font-medium tw:block">
                        {{ item.product.title }}
                      </a>

                      {% unless item.product.has_only_default_variant %}
                        <p class="tw:text-sm tw:text-gray-500">
                          {{ item.variant.title }}
                        </p>
                      {% endunless %}

                      {% render 'quantity', item: item, line: forloop.index %}

                      <div class="tw:text-base tw:font-semibold">
                        {{ item.final_line_price | money }}
                      </div>
                    </div>

                    <button
                      type="button"
                      class="tw:text-sm tw:text-red-600 hover:tw:underline"
                      data-cart-remove="{{ item.key }}"
                    >
                      {{ 'cart.remove' | t }}
                    </button>
                  </article>
                {% endfor %}
              </div>
            </div>

            <div class="tw:w-80">
              <div class="tw:bg-gray-100 tw:rounded-lg tw:p-6 tw:space-y-4">
                <div class="tw:flex tw:justify-between tw:text-lg tw:font-bold">
                  <span>{{ 'cart.subtotal' | t }}</span>
                  <span>{{ cart.total_price | money }}</span>
                </div>

                <p class="tw:text-sm tw:text-gray-500">
                  {{ 'cart.taxes_and_shipping_at_checkout' | t }}
                </p>

                <button
                  type="submit"
                  name="checkout"
                  class="tw:w-full tw:py-4 tw:bg-black tw:text-white tw:rounded-lg tw:font-semibold tw:hover:bg-gray-800 tw:transition"
                >
                  {{ 'cart.checkout' | t }}
                </button>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>

  {% else %}
    <div class="tw:text-center tw:py-20">
      <h1 class="tw:text-3xl tw:font-semibold">{{ 'cart.empty' | t }}</h1>
      <a href="{{ routes.all_products_collection_url }}" class="tw:inline-block tw:mt-6 tw:text-blue-600 underline">
        {{ 'cart.continue_shopping' | t }}
      </a>
    </div>
  {% endif %}
</section>
