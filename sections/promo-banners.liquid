<section
  class="promo-banners promo-banners--{{ section.settings.color_scheme }}"
  style="padding-bottom: {{ section.settings.padding-bottom | append: 'px' }};"
  aria-label="{{ section.settings.title | escape }}"
>
  <div class="page-width">
    {% if section.settings.title != blank %}
      <h2 class="promo-banners__title" style="text-align: {{ section.settings.text_align }};">
        {{ section.settings.title }}
      </h2>
    {% endif %}

    {% if section.settings.subtitle != blank %}
      <div class="promo-banners__subtitle" style="text-align: {{ section.settings.text_align }};">
        {{ section.settings.subtitle }}
      </div>
    {% endif %}

    <div class="promo-banners__grid">
      {% for block in section.blocks %}
        <div
          class="promo-banners__item promo-banners__item--{{ block.settings.aspect_ratio }}"
          {{ block.shopify_attributes }}
        >
          {% if block.settings.image %}
            {{
              block.settings.image
              | image_url: width: 600
              | image_tag: alt: block.settings.title
              | default: 'Banner image'
            }}
          {% else %}
            {{ 'image' | placeholder_svg_tag: 'promo-banners__placeholder' }}
          {% endif %}
          {% if block.settings.title %}
            <h3 class="promo-banners__item-title">{{ block.settings.title }}</h3>
          {% endif %}
          {% if block.settings.button_label and block.settings.button_link %}
            <a
              class="promo-banners__btn"
              href="{{ block.settings.button_link }}"
              aria-label="{{ block.settings.title | default: 'Promo banner button' }}"
            >
              {{ block.settings.button_label }}
            </a>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Promo Banners",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section title",
      "default": "Shop our collections"
    },
    {
      "type": "richtext",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "<p>Explore new arrivals and seasonal offers</p>"
    },
    {
      "type": "select",
      "id": "text_align",
      "label": "Text alignment",
      "default": "center",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ]
    },
    {
      "type": "range",
      "id": "padding-bottom",
      "label": "Section padding bottom (px)",
      "min": 0,
      "max": 80,
      "default": 40,
      "step": 5
    },
    {
      "type": "select",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "light",
      "options": [
        { "value": "light", "label": "Light" },
        { "value": "dark", "label": "Dark" },
        { "value": "accent", "label": "Accent" }
      ]
    }
  ],
  "blocks": [
    {
      "type": "banner",
      "name": "Banner",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "New collection"
        },
        {
          "type": "text",
          "id": "button_label",
          "label": "Button label",
          "default": "Shop now"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button link",
          "default": "/collections/all"
        },
        {
          "type": "select",
          "id": "aspect_ratio",
          "label": "Aspect ratio",
          "default": "16-9",
          "options": [
            { "value": "16-9", "label": "16:9" },
            { "value": "1-1", "label": "1:1" },
            { "value": "3-2", "label": "3:2" }
          ]
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Promo banners",
      "category": "Custom sections"
    }
  ]
}
{% endschema %}
